<Page x:Class="Hospital.Doctor.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hospital.Doctor"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Create" Background="AliceBlue">

    <Grid RenderTransformOrigin="0.753,0.563">
        <DatePicker Name="datepicker" HorizontalAlignment="Left" Margin="338,100,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,103,0,0" TextWrapping="Wrap" Text="Date:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="22"><Run Text="Time:"/><LineBreak/><Run/></TextBlock>
        <TextBox Name="timebox" HorizontalAlignment="Left" Height="23" Margin="338,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <ListBox Name="roomlistbox"  HorizontalAlignment="Left" Height="84" Margin="383,196,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="ListBox_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.473,4.516" Text="Choose room:"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.473,4.516" Text="Choose equipment:"/>
        <ListBox Name="equipmentlistbox" HorizontalAlignment="Left" Height="70" Margin="413,311,0,0" VerticalAlignment="Top" Width="70" SelectionChanged="ListBox_SelectionChanged"/>
        <Button Content="Confirm" HorizontalAlignment="Left" Margin="304,402,0,17.6" Width="75" Height="30" Click="Confirm"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="408,402,0,17.6" Width="75" Height="30" Click="Cancel"/>
        <TextBlock HorizontalAlignment="Left" Margin="338,20,0,0" TextWrapping="Wrap" Text="Add new appointment" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="304,63,0,0" TextWrapping="Wrap" Text="ID:" VerticalAlignment="Top" RenderTransformOrigin="1.014,0.514"/>
        <TextBox x:Name="id" HorizontalAlignment="Left" Height="23" Margin="338,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Page>
