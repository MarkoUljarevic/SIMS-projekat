            <!--         <DataGridTextColumn Header="Tuesday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Wednesday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Thursday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Friday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Saturday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Sunday" Width="*"/> -->
            <!--     </DataGrid.Columns> -->
            <!-- </DataGrid> -->
        </Grid>
    </Grid>
</Page>
