<Page x:Class="Hospital.View.DoctorView.Checkup.HospitalTreatmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Hospital.View.DoctorView.Checkup"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="700"
      Title="HospitalTreatmentPage">
    <Page.Resources>
        <ResourceDictionary Source="../Resources/DoctorResourceDictionary.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border 
                Style="{StaticResource HeaderBorderStyle}"/>
            <Label 
                Style="{StaticResource HeaderLabelStyle}" 
                Content="Hospital treatment"/>
        </Grid>
        <Grid Grid.Row="1" Margin="170 130 70 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0">
                <Label
                    Content="Room:"
                    Padding="5"
                    HorizontalAlignment="Right"
                    Margin="0 80 0 0"
                    Style="{StaticResource LabelStyle}"
                    FontSize="18"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <Border 
                Style="{StaticResource BorderStyle}"
                Margin="5 0 0 70" 
                Width="250" 
                Height="200" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top">
                    <ListView
                        Style="{StaticResource ListViewStyle}"
                        Height="200"
                        Width="250"/>
                </Border>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0">
                <Label
                    Content="Bed:"
                    HorizontalAlignment="Right"
                    Margin="0 60 0 0"
                    Style="{StaticResource LabelStyle}"
                    FontSize="18"/>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1">
                <Border 
                Style="{StaticResource BorderStyle}"
                Margin="5 0 0 40" 
                Width="250" 
                Height="150" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top">
                    <ListView
                        Style="{StaticResource ListViewStyle}"
                        Height="150"
                        Width="250"/>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Button 
                Content="Confirm" 
                Style="{StaticResource ConfirmButton}"
                HorizontalAlignment="Left"
                Width="350" 
                Height="50" />
            <Button 
                Content="Cancel" 
                Style="{StaticResource CancelButton}"
                HorizontalAlignment="Right"
                Width="350" 
                Height="50" />
        </Grid>
    </Grid>
</Page>
