<Page x:Class="Hospital.View.DoctorView.Requests.CreateRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Hospital.View.DoctorView.Requests"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="700"
      Title="RequestVacationPage">
    <Page.Resources>
        <ResourceDictionary Source="../Resources/DoctorResourceDictionary.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Rectangle 
                Style="{StaticResource HeaderRectangleStyle}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"/>
            <Label 
                Style="{StaticResource LabelStyle}" 
                Content="New vacation request" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                FontSize="24"/>
            <TextBlock 
                Text="Start date:" 
                Style="{StaticResource TextBlockStyle}" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="100, 120, 0, 0" 
                FontSize="25"/>
            <TextBlock 
                Style="{StaticResource TextBlockStyle}"
                Text="End date:" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="109, 220, 0, 0" 
                FontSize="25"/>
            <TextBlock  
                Style="{StaticResource TextBlockStyle}"
                Text="Reason:" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="127, 320, 0, 0" 
                FontSize="25"/>
            <TextBlock 
                Style="{StaticResource TextBlockStyle}"
                Text="Urgent request?"  
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="0, 400, 100, 0" FontSize="25"/>
            <DatePicker 
                Name="StartDate" 
                Style="{StaticResource DatePickerStyle}" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="40, 124, 0, 0" 
                Width="260" 
                Height="30" 
                FontSize="18" 
                SelectedDateChanged="StartDate_OnSelectedDateChanged"/>
            <DatePicker 
                Style="{StaticResource DatePickerStyle}"
                Name="EndDate"  
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Margin="40, 224, 0, 0" 
                Width="260"
                Height="30" 
                FontSize="18"/>
            <TextBox 
                Name="ReasonTextBox" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Width="260" 
                Height="150" 
                Margin="40, 30, 0, 0"/>
            <CheckBox Name="UrgentCheckBox" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center" 
                      Margin="150, 405, 0, 0">
                <CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                </CheckBox.LayoutTransform>
            </CheckBox>
            
            <Button 
                Content="Confirm" 
                Style="{StaticResource DefaultButton}"
                HorizontalAlignment="Left"  
                VerticalAlignment="Bottom" 
                Margin="0,0,0,0" 
                Width="350" 
                Height="50" 
                Click="Confirm"/>
            <Button 
                Content="Cancel"  
                Style="{StaticResource DefaultButton}"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,0,0" 
                Width="350" 
                Height="50" 
                Click="Cancel"/>
        </Grid>
    </Grid>
</Page>
