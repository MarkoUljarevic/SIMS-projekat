            <!--         <DataGridTextColumn Header="Time" Width="1/2*"/> -->
            <!--         <DataGridTextColumn Header="Monday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Tuesday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Wednesday" Width="*"/> -->
            <!--         <DataGridTextColumn Header="Thursday" Width="*"/> -->
