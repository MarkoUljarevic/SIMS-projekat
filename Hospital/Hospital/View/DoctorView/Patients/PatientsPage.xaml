<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Hospital.View.DoctorView.Patients"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="Hospital.View.DoctorView.Patients.PatientsPage"
      mc:Ignorable="d"
      d:DesignHeight="768" d:DesignWidth="700"
      Title="PatientsPage">
    <Page.Resources>
        <ResourceDictionary Source="../Resources/DoctorResourceDictionary.xaml"/>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Border 
                Style="{StaticResource BorderStyle}"
                Width="550" 
                Height="34.5"
                VerticalAlignment="Bottom"
                BorderThickness="0.3"
                BorderBrush="#42A5F5">
                <xctk:WatermarkTextBox
                    Width="550"
                    Height="34.5"
                    Watermark="Search..."
                    FontSize="20"
                    Background="Transparent"
                    BorderThickness="0"/>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Border 
                Style="{StaticResource BorderStyle}"
                Width="550" 
                Height="550"
                VerticalAlignment="Top">
                <DataGrid
                    CanUserAddRows="False"
                    Width="550"
                    Height="550"
                    AutoGenerateColumns="False"
                    RowHeaderWidth="0"
                    CanUserDeleteRows="False"
                    CanUserReorderColumns="False"
                    IsReadOnly="True"
                    Background="Transparent"
                    BorderThickness="0"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Patient"
                            Width="Auto"/>
                        <DataGridTextColumn 
                            Header="Age"
                            Width="Auto"/>
                        <DataGridTextColumn 
                            Header="Health insurance ID"
                            Width="Auto"
                            CanUserSort="False"/>
                        <DataGridTextColumn 
                            Header="Gender"
                            Width="Auto"/>
                        <DataGridTextColumn 
                            Header="Blood type"
                            Width="Auto"
                            CanUserSort="False"/>
                        <DataGridTextColumn 
                            Header="Phone"
                            Width="Auto"
                            CanUserSort="False"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Button 
                Style="{StaticResource ConfirmButton}"
                Content="Patient relocation"
                Height="50"/>
        </Grid>
    </Grid>
</Page>
