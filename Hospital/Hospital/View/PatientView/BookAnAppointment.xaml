<Window x:Class="Hospital.View.PatientView.BookAnAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital.View.PatientView"
        mc:Ignorable="d"
        Title="BookAnAppointment" Height="536" Width="420"
        x:Name="bookAnAppointment">

    <Grid>
        <TextBox x:Name="TextBoxDoctor" HorizontalAlignment="Center" Margin="0,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" Height="29" SelectionOpacity="0.2" Cursor="Hand"/>
        <Label HorizontalAlignment="Left" Margin="185,183,0,0" VerticalAlignment="Top"/>
        <Label Content="Choose the doctor:" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Width="156" FontSize="16" Height="34" FontWeight="Bold"/>
        <Label Content="Choose the date:" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Width="156" FontSize="16" Height="34" FontWeight="Bold"/>

        <Button x:Name="BTN_AddAppointment" Content="Continue" HorizontalAlignment="Left" Margin="114,369,0,0" VerticalAlignment="Top" Height="34" Width="76" Click="AddAppointment_Click"/>
        <Button x:Name="BTN_close" Content="Cancel" HorizontalAlignment="Left" Margin="236,371,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.045,-0.424" Height="32" Width="86" Click="Close_Click"/>
        <Calendar x:Name="calendar" HorizontalAlignment="Center" Margin="0,183,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
